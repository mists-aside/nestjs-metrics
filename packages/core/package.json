{
  "name": "@mists/nestjs-metrics",
  "version": "0.0.2",
  "description": "A NestJs plugin for metrics",
  "main": "dist/commonjs/index.js",
  "types": "dist/commonjs/index.d.ts",
  "scripts": {
    "build": "tsc",
    "ca:lint": "npm run prettier:write && npm run lint:write",
    "ca:quality": "npm run jscpd && npm run depcruise",
    "ca:security": "npm run license-check && (npm audit || yarn audit --groups=dependencies)",
    "ca": "npm run ca:lint && npm run ca:quality && npm run ca:security",
    "clean": "rimraf .jscpd .nyc_output coverage dist docs",
    "depcruise": "depcruise --config .dependency-cruiser.js src -x src/*.d.ts",
    "docs:watch": "nodemon --exec 'npm run doc'",
    "docs": "npx typedoc --out docs --json docs.json --readme none --theme minimal src",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "jscpd": "jscpd ./src --blame --format typescript",
    "license-check": "npx license-checker --production --json --failOn='AGPL AGPL 1.0; AGPL 3.0; CDDL or GPLv2 with exceptions; CNRI Python GPL Compatible; Eclipse 1.0; Eclipse 2.0; GPL; GPL 1.0; GPL 2.0; GPL 2.0 Autoconf; GPL 2.0 Bison; GPL 2.0 Classpath; GPL 2.0 Font; GPL 2.0 GCC; GPL 3.0; GPL 3.0 Autoconf; GPL 3.0 GCC; GPLv2 with XebiaLabs FLOSS License Exception; LGPL; LGPL 2.0; LGPL 2.1; LGPL 3.0; Suspected Eclipse 1.0; Suspected Eclipse 2.0'",
    "lint:log": "npm run lint -- -f json -o .eslint-output.json",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "lint:write": "npm run lint -- --fix",
    "lint": "eslint ./{src,test}/**/*.ts",
    "prebuild": "npm run clean",
    "predocs": "rimraf docs",
    "prepare": "npm run build",
    "prerelease": "npm run build",
    "pretest": "npm run build",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "prettier": "prettier ./{src,test}/**/*.ts",
    "release": "release-it --ci --no-npm.publish",
    "sonar": "sonar-scanner",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:single": "cross-env NODE_ENV=test nyc --reporter=html --reporter=lcov --reporter=text --extension .ts mocha --forbid-only",
    "test:watch": "nodemon --exec 'npm run test'",
    "test": "npm run test:single -- './test/**/*.test.ts'",
    "#build": "rollup -c --environment NODE_ENV:production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mists-aside/nestjs-metrics.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mists-aside/nestjs-metrics/issues"
  },
  "homepage": "https://github.com/mists-aside/nestjs-metrics#readme",
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/preset-env": "7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@jscpd/badge-reporter": "^3.3.23",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^10.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-sonar": "^0.6.1",
    "eslint-plugin-sonarjs": "^0.10.0",
    "import-sort-style-module": "^6.0.0",
    "jscpd": "^3.3.26",
    "license-checker": "^25.0.1",
    "mocha": "^9.1.0",
    "mocha-junit-reporter": "^2.0.0",
    "node-ts": "^5.1.2",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "release-it": "^14.11.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "sonarqube-scanner": "^2.8.1",
    "ts-node": "^10.2.1",
    "typedoc": "^0.21.6",
    "typescript": "^4.3.5",
    "@types/statsd-client": "^0.4.1"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6"
  },
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "docs.json",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "prom-client": "^13.1.0",
    "statsd-client": "^0.4.5"
  }
}