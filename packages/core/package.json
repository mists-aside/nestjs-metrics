{
  "name": "@mists/nestjs-metrics",
  "version": "0.0.2",
  "description": "A NestJs plugin for metrics",
  "main": "dist/commonjs/index.js",
  "files": [
    "CHANGELOG.md",
    "dist",
    "docs.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "--build": "rollup -c --environment NODE_ENV:production",
    "build": "tsc -b",
    "clean": "rimraf coverage dist",
    "clean:force": "npm run clean; rimraf .nyc_output .rollupcache",
    "depcruise": "depcruise --config .dependency-cruiser.js src",
    "doc:watch": "nodemon --exec 'npm run doc'",
    "docs": "npx typedoc --out docs --json docs.json --readme none --theme minimal --mode file src",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run jscpd && npm run depcruise && npm run test",
    "inspector": "jsinspector server --port 9543",
    "jscpd": "jscpd ./src --blame --format typescript",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "lint": "eslint ./{src,test}/**/*.ts",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "lint:write": "npm run lint -- --fix",
    "prebuild": "npm run clean",
    "predocs": "rimraf docs",
    "prerelease": "npm run build",
    "--pretest": "npm run clean",
    "prettier": "prettier ./{src,test}/**/*.ts",
    "prettier:check": "npm run prettier -- --list-different",
    "prettier:write": "npm run prettier -- --write",
    "release": "release-it --ci --no-npm.publish",
    "test": "npm run test:single -- 'test/**/*.test.ts'",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:single": "nyc --reporter=html --reporter=lcov --reporter=text --extension .ts mocha",
    "test:watch": "nodemon --exec 'npm run test'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mists-aside/nestjs-metrics.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mists-aside/nestjs-metrics/issues"
  },
  "homepage": "https://github.com/mists-aside/nestjs-metrics#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@nestjs/cli": "^7.5.6",
    "@nestjs/core": "^7.6.13",
    "@nestjs/platform-express": "^7.6.13",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@types/sinon-chai": "^3.2.5",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^9.23.2",
    "husky": "^5.1.1",
    "jscpd": "^3.3.23",
    "jscpd-badge-reporter": "^1.1.3",
    "jsinspector": "^2.0.4",
    "lerna": "^3.22.1",
    "mocha": "^8.3.0",
    "mocha-junit-reporter": "^2.0.0",
    "nanoid": "^3.1.20",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "release-it": "^14.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.1",
    "rollup-plugin-dts": "^2.0.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.28",
    "typescript": "^4.2.2"
  },
  "gitHooks": {
    "commit-msg": "commitlint -e -V ",
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@types/statsd-client": "^0.4.1",
    "prom-client": "^13.1.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "statsd-client": "^0.4.5",
    "uuid": "^8.3.2"
  }
}
