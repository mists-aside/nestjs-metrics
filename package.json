{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "colors": "^1.4.0",
    "husky": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-import-sort": "^0.0.7"
  },
  "scripts": {
    "build": "lerna run build --scope @mists/nestjs-metrics*",
    "ca": "lerna run ca --scope @mists/nestjs-metrics*",
    "clean": "lerna run clean --scope @mists/nestjs-metrics*",
    "clean:all": "npm run clean && rimraf node_modules packages/**/node_modules",
    "lint": "lerna run lint:write --scope @mists/nestjs-metrics*",
    "postinstall": "node .scripts/bootstrap.js && lerna bootstrap",
    "prettier": "lerna run prettier:write --scope @mists/nestjs-metrics*",
    "test": "lerna run test --scope @mists/nestjs-metrics*"
  },
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
